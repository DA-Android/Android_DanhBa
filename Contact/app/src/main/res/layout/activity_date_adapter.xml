<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.DateAdapter">

    <EditText
        android:id="@+id/edtText_date"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></EditText>

    <EditText
        android:enabled="true"

        android:id="@+id/edtText_kind_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType=""
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/edtText_date"
        app:layout_constraintTop_toBottomOf="@+id/edtText_date"
        tools:ignore="MissingConstraints"></EditText>

    <ImageView
        android:id="@+id/imgView_date"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_calender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner_kind_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/edtText_kind_date"
        app:layout_constraintTop_toTopOf="@+id/edtText_kind_date"
        tools:ignore="MissingConstraints"></Spinner>

    <TextView
        android:id="@+id/txtView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/date"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imgView_date"
        app:layout_constraintTop_toTopOf="@+id/edtText_date"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imagebtnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#ffff"
        android:src="@drawable/ic_plus"
        app:layout_constraintStart_toEndOf="@+id/edtText_date"
        app:layout_constraintTop_toTopOf="@+id/edtText_date" />
</androidx.constraintlayout.widget.ConstraintLayout>